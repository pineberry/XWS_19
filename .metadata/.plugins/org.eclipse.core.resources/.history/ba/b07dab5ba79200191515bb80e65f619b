package megatravel.resources;

import java.util.Collections;
import java.util.List;

import org.springframework.web.bind.annotation.PathVariable;
import org.springframework.web.bind.annotation.RequestMapping;
import org.springframework.web.bind.annotation.RestController;

import megatravel.model.AccommodationUnit;

@RestController
@RequestMapping("/accommodation")
public class AccommodationUnitResource {

	@RequestMapping("/{auId}")
	public List<AccommodationUnit> getAccommodationUnits(@PathVariable("auId") Long auId) {
		return Collections.singletonList(new AccommodationUnit((long) 1, "opis jedinice", "bnb", "2 zvezdice"));
	}
	
}
