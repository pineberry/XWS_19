package megatravel.resources;

import java.util.ArrayList;
import java.util.Collection;
import java.util.Collections;
import java.util.Iterator;
import java.util.List;
import java.util.ListIterator;

import org.springframework.web.bind.annotation.PathVariable;
import org.springframework.web.bind.annotation.RequestMapping;
import org.springframework.web.bind.annotation.RestController;

import megatravel.model.AccommodationUnit;

@RestController
public class AccommodationUnitResource {

	@RequestMapping("/")
	public String hello() {
		return "Hello";
	}
	
	
	@RequestMapping("/{auId}")
	public List<AccommodationUnit> getAccommodationUnits(@PathVariable("auId") String auId) {
		
		List<AccommodationUnit> accommodationUnits = new ArrayList<AccommodationUnit>();
		
		accommodationUnits.add(new AccommodationUnit((long) 1, "opis jedinice", "bnb", "2 zvezdice"));
		
		return accommodationUnits;
	}
	
}
